@model IEnumerable<Department>;
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<br />
<br />
<a asp-controller="dept"  asp-action="Create"class="btn btn-Primary"> Create New Dept</a>
<br />


@if (Model.Count() > 0)
{
    

    <table class="table table-hover table-striped m-4">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(D=>D.Code)</th>
                <th>@Html.DisplayNameFor(D=>D.Name)</th>
                <th>@Html.DisplayNameFor(D=>D.DateOfCreation)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>

        <tbody>

            @foreach(var dept in Model)
            {

                <tr>
                    <td>@dept.Code</td>
                    <td>@dept.Name</td>
                    <td>@dept.DateOfCreation</td>

                    <partial name="_ButtonPartial" model="@dept.Id"></partial>
                    @* <td>@Html.DisplayNameFor(D => D.DateOfCreation)</td> *@
                </tr>
                
            }
        </tbody>
    </table>
}

else
{
    <div class="mt-4 alert alert-danger">
        <h3>There is No Department</h3>
    </div>
}



