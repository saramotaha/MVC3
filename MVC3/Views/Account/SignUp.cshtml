@model SignUpViewModel

@{
	ViewData["Title"] = "Sign Up";
	Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-agileinfo">
	<div class="agileits-top">
		<div asp-validation-summary="ModelOnly"></div>
		<form asp-action="SignUp">
			<input class="text" asp-for="FName" placeholder="First Name" required=""><br />
			<input class="text" asp-for="LName" placeholder="Last Name" required=""><br />
			<input class="text" asp-for="UserName" placeholder="Username" required="">
			<input class="text email" asp-for="Email" placeholder="Email" required="">
			<input class="text" asp-for="Password" placeholder="Password" required="">
			<input class="text w3lpass" asp-for="ConfirnPassword" placeholder="Confirm Password" required="">
			<div class="wthree-text">
				<label class="anim">
					<input type="checkbox" asp-for="IsAgree" class="checkbox" required="">
					<span>I Agree To The Terms & Conditions</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SIGNUP">
		</form>
		<p>Do U have an Account? <a asp-action="SignIn"> Login Now!</a></p>
	</div>
</div>
