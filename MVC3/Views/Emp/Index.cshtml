@model IEnumerable<Employee>;
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<br />
<br />
<a asp-controller="Emp" asp-action="Create" class="btn btn-Primary"> Create New EMPLOYEE</a>
<br />


@if (Model.Count() > 0)
{


    <table class="table table-hover table-striped m-4">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(D => D.Name)</th>
                <th>@Html.DisplayNameFor(D => D.Email)</th>
                <th>@Html.DisplayNameFor(D => D.Age)</th>
                <th>@Html.DisplayNameFor(D => D.Salary)</th>
                <th>@Html.DisplayNameFor(D => D.Gender)</th>
                <th>@Html.DisplayNameFor(D => D.IsActive)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>

        <tbody>

            @foreach (var employee in Model)
            {

                <tr>
                    <td>@employee.Name</td>
                    <td>@Html.DisplayFor(w => employee.Email)</td>
                    <td>@employee.Age</td>
                    <td>@Html.DisplayFor(w => employee.Salary)</td>
                    <td>@employee.Gender</td>
                    <td>@Html.DisplayFor(w => employee.IsActive)</td>
                    <td>
                        <a asp-controller="Emp" asp-action="Details" asp-route-id="@employee.Id" class="btn btn-warning">Details</a>

                    </td>
                    <td>
                        <a asp-controller="Emp" asp-action="Update" asp-route-id="@employee.Id" class="btn btn-warning">Update</a>

                    </td>
                    <td>
                        <a asp-controller="Emp" asp-action="Delete" asp-route-id="@employee.Id" class="btn btn-warning">Delete</a>

                    </td>
                    @* <td>@Html.DisplayNameFor(D => D.DateOfCreation)</td> *@
                </tr>

            }
        </tbody>
    </table>
}

else
{
    <div class="mt-4 alert alert-danger">
        <h3>There is No Department</h3>
    </div>
}



