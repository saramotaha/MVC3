@model IEnumerable<EmpViewModel>;
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<br />
<br />
<a asp-controller="Emp" asp-action="Create" class="btn btn-Primary"> Create New EMPLOYEE</a>
<br />


<div class="row justify-content-center align-items-center m-3">
    <form class="row col-8 offset-2">
        <div class="col-8">
            <input type="text" name="SearchIn" id="SearchIn" class="form-control" placeholder="Search By Name......" />
        </div>  
        <div class="col-4">
            <input type="submit"  value="Search" class="btn btn-success"/>
        </div>
    </form>
</div>


@if (Model.Count() > 0)
{


    <table class="table table-hover table-striped m-4">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(D => D.Name)</th>
                <th>@Html.DisplayNameFor(D => D.Email)</th>
                <th>@Html.DisplayNameFor(D => D.Age)</th>
                <th>@Html.DisplayNameFor(D => D.Department)</th>
                <th>@Html.DisplayNameFor(D => D.Salary)</th>
                <th>@Html.DisplayNameFor(D => D.Gender)</th>
                <th>@Html.DisplayNameFor(D => D.IsActive)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>

        <tbody>

            @foreach (var employee in Model)
            {

                <tr>
                    <td>@employee.Name</td>
                    <td>@Html.DisplayFor(w => employee.Email)</td>
                    <td>@employee.Age</td>
                    <td>@employee.Department?.Name</td>
                    <td>@Html.DisplayFor(w => employee.Salary)</td>
                    <td>@employee.Gender</td>
                    <td>@Html.DisplayFor(w => employee.IsActive)</td>


                    <partial name="_ButtonPartial"  model="@employee.Id"></partial>
                    @* <td>@Html.DisplayNameFor(D => D.DateOfCreation)</td> *@
                </tr>

            }
        </tbody>
    </table>
}

else
{
    <div class="mt-4 alert alert-danger">
        <h3>There is No Department</h3>
    </div>
}



